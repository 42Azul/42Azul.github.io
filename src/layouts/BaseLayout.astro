---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// We expect props like:
//   { lang = 'en', currentPath = '' }
const { lang = 'en', currentPath = '' } = Astro.props;
---
<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Portfolio</title>
    <!-- Include Tailwind or your chosen CSS -->
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body class="bg-gray-100 text-gray-800 font-sans min-h-screen flex flex-col">
    <!-- Header -->
    <Header lang={lang} currentPath={currentPath} />

    <!-- Main Content -->
    <main id="content" class="mt-20 p-6 flex-grow fade-container" data-currentpath={currentPath}>
      <slot />
    </main>

    <!-- Footer -->
    <Footer />
  </body>
</html>
